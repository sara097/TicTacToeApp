<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <RelativeLayout
            android:id="@+id/rootRL"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">
    </RelativeLayout>
    <ImageView
            android:layout_width="225dp"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ttico_nobg"
            android:id="@+id/imageView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="44dp"
            app:layout_constraintBottom_toTopOf="@+id/players" app:layout_constraintHorizontal_bias="0.477"/>
    <Button
            android:text="Computer mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/computer" android:layout_marginBottom="192dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50"/>
    <Button
            android:text="2 player mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/players" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/computer"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/rootRL"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0">
    </RelativeLayout>
    <TextView
            android:text="Pick your name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="@+id/rootRL" app:layout_constraintHorizontal_bias="0.497"/>
    <EditText
            android:layout_width="334dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/playerName"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50" android:text="sara"/>
    <TextView
            android:text="Choose difficulty level"
            android:layout_width="352dp"
            android:layout_height="61dp"
            android:id="@+id/textView2"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="380dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.355"/>
    <TextView
            android:text="Do you want to be X or O?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/playerName" app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="X starts the game!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" android:background="#FBE950"
            android:id="@+id/symbolRadio">
        <RadioButton
                android:text="X"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/playerX" android:layout_weight="1"
                android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
                android:textAlignment="center" android:shadowColor="#F6D039"
                android:fontFamily="casual"/>
        <RadioButton
                android:text="O"
                android:layout_width="80dp"
                android:layout_height="wrap_content" android:id="@+id/playerO" android:layout_weight="1"
                android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
                android:textAlignment="center" android:shadowColor="#F6D039"
                android:fontFamily="casual"/>
    </RadioGroup>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:id="@+id/diffRadio"
            android:background="#FBE950">
        <RadioButton
                android:text="1"
                android:layout_width="61dp"
                android:layout_height="wrap_content" android:id="@+id/mode1" android:layout_weight="1"
                android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
                android:textAlignment="center" android:shadowColor="#F6D039"
                android:fontFamily="casual"/>
        <RadioButton
                android:text="2"
                android:layout_width="61dp"
                android:layout_height="wrap_content" android:id="@+id/mode2" android:layout_weight="1"
                android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
                android:textAlignment="center" android:shadowColor="#F6D039"
                android:fontFamily="casual"/>
        <RadioButton
                android:text="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/mode3" android:layout_weight="1"
                android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
                android:textAlignment="center" android:shadowColor="#F6D039"
                android:fontFamily="casual"/>
    </RadioGroup>
    <Button
            android:text="Start"
            android:layout_width="150dp"
            android:layout_height="86dp"
            android:id="@+id/startGame"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/diffRadio" app:layout_constraintHorizontal_bias="0.539"
            android:onClick="startClicked"/>
</android.support.constraint.ConstraintLayout>
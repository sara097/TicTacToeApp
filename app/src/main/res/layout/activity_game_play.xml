<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/rootRL"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0">
        <Button
                android:text="Play again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_alignParentEnd="true"
                android:layout_marginEnd="94dp" android:layout_alignParentBottom="true" android:id="@+id/playAgain"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
                android:layout_marginBottom="41dp" app:layout_constraintBottom_toTopOf="@+id/computer"
                android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
                android:textAlignment="center" android:shadowColor="#F6D039"
                android:fontFamily="casual" android:backgroundTint="#FDEA50"/>
    </RelativeLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="381dp" app:srcCompat="@drawable/table"
            android:id="@+id/table" app:layout_constraintTop_toTopOf="@+id/rootRL"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/rootRL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.289"/>
    <TableLayout
            android:layout_width="229dp"
            android:layout_height="242dp"
            app:layout_constraintStart_toStartOf="@+id/table" app:layout_constraintEnd_toEndOf="@+id/table"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/table" app:layout_constraintTop_toTopOf="@+id/table"
    >

        <TableRow android:layout_width="370dp" android:layout_height="80dp">
            <ImageButton
                    android:layout_width="75dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_0_0"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_0_1"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_0_2"
                    android:background="@null"
            />
        </TableRow>
        <TableRow android:layout_height="200dp">
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_1_0"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_1_1"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_1_2"
                    android:background="@null"/>
        </TableRow>
        <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_2_0"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_2_1"
                    android:background="@null"
            />
            <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="80dp" app:srcCompat="@drawable/empty"
                    android:id="@+id/p_2_2"
                    android:background="@null"
            />
        </TableRow>
    </TableLayout>
    <TextView
            android:layout_width="352dp"
            android:layout_height="61dp"
            android:id="@+id/playerLabel"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.491" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toBottomOf="@+id/rootRL" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/table"/>
</android.support.constraint.ConstraintLayout>
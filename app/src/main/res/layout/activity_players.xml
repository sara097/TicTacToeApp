<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/rootRL"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/bg2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="1.0"
    >
    </RelativeLayout>
    <TextView
            android:text="Player 1 is X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="@+id/rootRL"
            android:textAlignment="center"/>
    <TextView
            android:text="X starts the game!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView5"
            android:textAlignment="center"/>
    <TextView
            android:text="Pick player 1 name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            android:layout_marginTop="64dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>
    <EditText
            android:layout_width="334dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/player1Name"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50" android:hint="Player1"
            android:textColorHint="#732A46"/>
    <TextView
            android:text="Pick player 2 name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player2label"
            android:textColor="#F6D039" android:textStyle="normal|bold" android:textSize="30sp"
            android:fontFamily="casual"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.53" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/player1Name" android:textAlignment="center"/>
    <EditText
            android:layout_width="334dp"
            android:layout_height="58dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/player2Name"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50"
            app:layout_constraintHorizontal_bias="0.508" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/player2label" android:hint="Player2"
            android:textColorHint="#732A46"/>
    <Button
            android:text="Start"
            android:layout_width="150dp"
            android:layout_height="86dp"
            android:id="@+id/startGame"
            android:textColor="#FD4681" android:textStyle="normal|bold" android:textSize="30sp"
            android:textAlignment="center" android:shadowColor="#F6D039"
            android:fontFamily="casual" android:backgroundTint="#FDEA50" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/player2Name" android:onClick="startClicked"/>
</android.support.constraint.ConstraintLayout>